// default colors
controls = #0


@import "core/index"


.{root}

   &.is-touch.is-mouseover .fp-progress:before
      bg #00a7c8

   .fp-menu .fp-dropdown
     right -(spacing)
     left auto
     bottom controls_height
     border-radius 0px
     &:before
       display none

   .fp-fullscreen, .fp-unload, .fp-close, .fp-embed
     right 0
     top 0
   .fp-embed
     right controls_height + 2
   &.is-closeable.is-ready
     .fp-fullscreen
       right controls_height + 2
     .fp-embed
       right controls_height * 2 + 4

   // dark
   &.color-light
      controls_dark = #f

      .fp-controls, .fp-title, .fp-fullscreen, .fp-unload, .fp-close, .fp-embed
        bg rgba(controls_dark, .8)
        color #000
        &:before
          color #0
      .fp-menu .fp-dropdown li
        bg #f
        color #0
        &.active
          bg #00a7c8
          color #f
      .fp-play, .fp-menu
        color #0
        &:before
          color #0
      .fp-brand
        font-weight bold
        color #5
      .fp-time
        font-weight bold

      &.fixed-controls .fp-controls
         bg controls_dark

      .fp-volumelevel
        bg #00a7c8
      .fp-timeline, .fp-volumeslider
        bg #5

   // alt
   &.color-alt
      .fp-progress
         bg #f

      &.is-touch.is-mouseover .fp-progress:before
         bg #f

      .fp-buffer
         bg #9

   // alt2
   &.color-alt2
      .fp-progress
         bg #900
      &.is-touch.is-mouseover .fp-progress:before
         bg #900


