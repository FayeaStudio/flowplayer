
controls = #0
control_border_radius = 3px

@import "core/index"

.{root}
   .fp-title
     absolute spacing spacing
   .fp-title, .fp-unload, .fp-fullscreen, .fp-embed
     border-radius control_border_radius
   &.is-mouseout
     .fp-menu
       display none
   &.is-mouseover .fp-controls
     bottom spacing
     left spacing + controls_height + spacing
     right spacing
     width auto
     border-radius control_border_radius

     .fp-play
       left -(spacing + controls_height)
       display block
       bg controls
       bg rgba(controls, .65)
       width controls_height
       height controls_height
       border-radius control_border_radius
     .fp-timeline
       margin-left spacing * 2 + time_width
       border-radius control_border_radius
     .fp-menu .fp-dropdown
       bottom spacing * 3 + 5
       left auto
       right -(spacing)
       &:before
         display none
      li
        border-color controls
        &.active
          border-color #00a7c8
      li:last-child:before
        content ''
        display block
        position absolute
        bottom -5px
        width 0
        height 0
        right spacing
        border-bottom none
        border-top-width 5px
        border-top-style solid
        border-top-color inherit
        border-left 5px solid transparent
        border-right 5px solid transparent
   .fp-elapsed, &.play-button .fp-elapsed
     left spacing * 3 + controls_height
   .fp-time em
     bottom spacing * 2

p

   &.color-alt
      .fp-progress
         gradient #9 #1

      &.is-touch.is-mouseover .fp-progress:before
         gradient #9 #1

      .fp-timeline, .fp-volumeslider
         bg #1

   &.color-alt2
      .fp-progress
         background-color #900

      &.is-touch.is-mouseover .fp-progress:before
         background-color #900
