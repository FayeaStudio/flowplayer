
.{root}

   .fp-time
      text-shadow 0 0 1px #0
      font-size font_size
      font-weight normal
      color #f
      width 100%

      // inverted time
      &.is-inverted
         .fp-duration
            display none

         .fp-remaining
            display inline

      em
         width time_width
         height timeline_height
         line-height timeline_height
         text-align center
         position absolute
         bottom spacing

      .no-time&
         display none

      .is-long& em
         width hour_time_width

   .fp-elapsed
      left spacing

      .is-rtl&
         left auto
         right spacing

   .fp-remaining, .fp-duration
      right right_margin + spacing + brand_width
      color #e

      .no-brand&
        right right_margin
        .has-menu&
          right right_margin + menu_width + spacing

      .has-menu&
         right right_margin + menu_width + spacing + brand_width

      .no-volume&
         right mute_width + spacing * 2

      .no-mute&
         right spacing * 2 + volume_width

      .no-mute.no-volume&
         right spacing

      .is-rtl&
         right auto
         left right_margin + spacing + brand_width

         .no-brand&
            left right_margin
            .has-menu&
              left right_margin + menu_width

         .has-menu&
            left right_margin + menu_width + spacing + brand_width

         .no-volume&
            left mute_width + spacing * 2

         .no-mute&
            left spacing * 2 + volume_width

         .no-mute.no-volume&
            left spacing

   .fp-remaining
      display none

   &.color-light
      .fp-time
         color #2
         text-shadow 0 0 1px #f

      .fp-remaining, .fp-duration
         color #6


   // top / left
   &.aside-time .fp-time
      absolute spacing * 2 + controls_height spacing
      bottom auto !important
      width full_time_width

      strong, em
         position static

      .fp-elapsed
         margin-right spacing

         .is-rtl&
            margin-right auto
            margin-left spacing

   &.is-long.aside-time .fp-time
      width hour_time_width * 2




