
.{root}

   // play button = separate centered image
   .fp-ui

      .is-splash&, .is-paused&
         background 'url(%s.png) center no-repeat' % unquote(img_play)
         background-size 12%

         .is-rtl&
            background 'url(%s.png) center no-repeat' % unquote(img_play_rtl)
            background-size 12%

         @media (-webkit-min-device-pixel-ratio: 2)
            background 'url(%s@x2.png) center no-repeat' % unquote(img_play)
            background-size 12%

            .is-rtl&
               background 'url(%s@x2.png) center no-repeat' % unquote(img_play_rtl)
               background-size 12%

         .color-light&
            background-image 'url(%s.png)' % unquote(img_play_dark)

            .is-rtl&
               background-image 'url(%s.png)' % unquote(img_play_dark_rtl)

         @media (-webkit-min-device-pixel-ratio: 2)
            .color-light&
               background-image 'url(%s@x2.png)' % unquote(img_play_dark)

               .is-rtl&
                  background-image 'url(%s@x2.png)' % unquote(img_play_dark_rtl)

      .is-fullscreen&
         background-size auto

      .is-seeking&, .is-loading&
         background-image none

   .fp-brand
      color #f
      position absolute
      right volume_width + controls_height + spacing * 2
      font-weight normal
      line-height timeline_height
      height timeline_height
      width brand_width
      bottom spacing

   .fp-logo
      absolute auto 15px
      bottom controls_height + 10px
      cursor pointer
      display none
      z-index 100

      img
         width 100%

      .is-embedded&
         display block

      .fixed-controls&
         bottom 15px


   .fp-fullscreen, .fp-unload, .fp-close
      absolute spacing auto
      right spacing
      block 30px 23px
      cursor pointer

      .is-rtl&
         right auto
         left spacing

   .fp-unload, .fp-close
      display none

   .fp-play
      display none
      width play_width
      height controls_height
      position absolute
      bottom 0
      left 0

      .is-rtl&
         left auto
         right 0

      .play-button&
         display block

      .is-playing&
         &:before
           content: "\e607" 

   .fp-subtitle-switch
      display none
      color #f
      position absolute
      bottom 3px
      z-index 11
      right right_margin + spacing
      .has-subtitles&
         display block
      .fp-dropdown
         z-index 12
         display none
         left -42.5px
      &.dropdown-open
         .fp-dropdown
            display block
   &.is-ready.is-closeable
      .fp-unload
         display block
      .fp-fullscreen
         display none

   &.is-fullscreen
      .fp-fullscreen
         display block !important
         &:before
          content "\e601"

      .fp-unload, .fp-close
         display none !important

